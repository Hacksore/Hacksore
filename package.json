{
  "name": "hacksore",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "start:web": "concurrently yarn:dev yarn:emulator",
    "start": "concurrently yarn:dev:all yarn:emulator",
    "emulator": "firebase emulators:start --import private-seed",
    "db:export": "firebase emulators:export private-seed",
    "dev": "turbo start --filter=web",
    "dev:all": "turbo start",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "tsc": "tsc -b --watch",
    "lint": "turbo lint",
    "serve": "turbo serve",
    "format": "npx prettier -w '**/*.{ts,tsx}'",
    "deploy": "firebase deploy && vercel deploy",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "firebase-tools": "^12.4.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "turbo": "^1.10.7",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
