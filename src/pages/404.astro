---
import Layout from "../layouts/layout.astro";

const META_INFO = {
  title: "404 - Page Not Found",
  description: "That page doesn't exist.",
};
---

<Layout
  title={META_INFO.title}
  description={META_INFO.description}
>
  <div class="error-container">
    <div class="error-content">
      <div class="glitch-wrapper">
        <div class="glitch" data-text="404">404</div>
        <div class="glitch" data-text="404">404</div>
        <div class="glitch" data-text="404">404</div>
      </div>
      
      <h2 class="error-title">
        <span class="gradient-text">Oops!</span> This page went on a vacation
      </h2>
      
      <p class="error-message">
        It seems like this page decided to take a break and never came back. 
        <span class="meme-text">Skill issue? Maybe. My fault? Definitely not.</span>
      </p>
      
      <div class="error-actions">
        <a href="/" class="btn-primary">
          <span>Go Home</span>
          <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </a>
        
      </div>
      
      
    </div>
  </div>
</Layout>

<style>
  .error-container {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    overflow: hidden;
  }

  

  .error-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    width: 100%;
  }

  /* Glitch effect for 404 */
  .glitch-wrapper {
    position: relative;
    margin-bottom: 2rem;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .glitch {
    position: absolute;
    font-size: 12rem;
    font-weight: 900;
    line-height: 1;
    color: #fff;
    letter-spacing: -0.05em;
    text-shadow: 
      0.05em 0 0 rgba(255, 0, 0, 0.75),
      -0.05em -0.025em 0 rgba(0, 255, 0, 0.75),
      0.025em 0.05em 0 rgba(0, 0, 255, 0.75);
    animation: glitch 0.5s infinite;
  }

  .glitch:nth-child(2) {
    animation-delay: 0.1s;
    opacity: 0.8;
  }

  .glitch:nth-child(3) {
    animation-delay: 0.2s;
    opacity: 0.6;
  }

  @keyframes glitch {
    0%, 100% {
      transform: translate(0);
      filter: hue-rotate(0deg);
    }
    20% {
      transform: translate(-2px, 2px);
      filter: hue-rotate(90deg);
    }
    40% {
      transform: translate(-2px, -2px);
      filter: hue-rotate(180deg);
    }
    60% {
      transform: translate(2px, 2px);
      filter: hue-rotate(270deg);
    }
    80% {
      transform: translate(2px, -2px);
      filter: hue-rotate(360deg);
    }
  }

  .error-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #fff;
    line-height: 1.2;
  }

  .gradient-text {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 3s ease infinite;
    display: inline-block;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .error-message {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 3rem;
    line-height: 1.6;
  }

  .meme-text {
    display: block;
    margin-top: 0.5rem;
    font-size: 1rem;
    color: #f093fb;
    font-style: italic;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.7;
    }
    50% {
      opacity: 1;
    }
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: 0.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: none;
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6);
    background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
  }

  .btn-primary:active {
    transform: translateY(0);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border: 2px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
  }

  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    transition: transform 0.3s ease;
  }

  .btn-primary:hover .btn-icon,
  .btn-secondary:hover .btn-icon {
    transform: scale(1.2);
  }

  /* Floating emojis */
  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .float-emoji {
    position: absolute;
    font-size: 2rem;
    animation: float-emoji 8s var(--delay, 0s) infinite ease-in-out;
    opacity: 0.7;
  }

  .float-emoji:nth-child(1) {
    left: 10%;
    top: 20%;
  }

  .float-emoji:nth-child(2) {
    left: 80%;
    top: 30%;
  }

  .float-emoji:nth-child(3) {
    left: 20%;
    top: 70%;
  }

  .float-emoji:nth-child(4) {
    left: 70%;
    top: 80%;
  }

  .float-emoji:nth-child(5) {
    left: 50%;
    top: 10%;
  }

  @keyframes float-emoji {
    0%, 100% {
      transform: translateY(0) rotate(0deg) scale(1);
      opacity: 0.7;
    }
    25% {
      transform: translateY(-20px) rotate(90deg) scale(1.2);
      opacity: 1;
    }
    50% {
      transform: translateY(-40px) rotate(180deg) scale(1);
      opacity: 0.7;
    }
    75% {
      transform: translateY(-20px) rotate(270deg) scale(1.2);
      opacity: 1;
    }
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .glitch {
      font-size: 8rem;
    }

    .error-title {
      font-size: 2rem;
    }

    .error-message {
      font-size: 1.125rem;
    }

    .btn-primary,
    .btn-secondary {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }

    .float-emoji {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .glitch {
      font-size: 6rem;
    }

    .error-title {
      font-size: 1.75rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>
